#include <iostream>
#include <locale.h> // DİL KUTUPHANESİ

using namespace std;

int main()
{
setlocale(LC_ALL,"Turkish");
int sayi;

 cout<<"faktoriyelini bulmak istediginiz sayiyi giriniz:";
 cin>>sayi;
 
 int fakt=1;
 int b=1;

while(b<=sayi)
{
   fakt*=b; //fakt=fakt*b

	b++;
	
}

		cout<<sayi<<"!="<<fakt<<endl;
	
	system("pause");
	return 0;
	
}
